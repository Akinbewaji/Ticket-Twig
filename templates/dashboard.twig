<div class="container">
  <h1>Dashboard</h1>
  <div class="grid">
    <div class="card">
      <h3>Total Tickets</h3>
      <p>{{ stats.total }}</p>
    </div>
    <div class="card">
      <h3>Open Tickets</h3>
      <p>{{ stats.open }}</p>
    </div>
    <div class="card">
      <h3>Resolved Tickets</h3>
      <p>{{ stats.closed }}</p>
    </div>
  </div>
  <div style="margin-top: 20px;">
    <button class="btn btn-primary" onclick="navigateTo('tickets')">Manage Tickets</button>
    <button class="btn btn-secondary" onclick="logout()">Logout</button>
  </div>
</div>
